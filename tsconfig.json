{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "strict": true,
    "target": "ESNext",
    "types": ["node", "jest"],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": ["./src", "./types"]
}
